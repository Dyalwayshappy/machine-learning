import numpy as np
def predict_single_loop(x,w,b):
    ""
    #single predict using linear regression
    #Argsï¼š
      #       x : (ndarry shape (n,))  with multiple features
      #       w : (ndarry shape (n,))  model parameters
      #       b : (sclar            )  model parameters
    #Returns
      #       p: (scalar)              prediction
    ""
    n = len(x)
    p = 0
    p = np.dot(x,w) + b
    return (p)
